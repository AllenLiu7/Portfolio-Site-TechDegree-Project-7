extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      
      h1 My portfolio

      
      p.lead.text-light
        | These are projects I have done in TechDegree
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

     
      
      
      each project, index in projects
        .cell
          - var id = index + 1
          a(href='https://allenliuportfolio.herokuapp.com/projects/' + id)
            img.thumbnail(src='https://allenliuportfolio.herokuapp.com/static/images/project' + projects[index].id + '_1.jpg')
            - var projectname = projects[index].project_name
            h5= projectname
      
      
